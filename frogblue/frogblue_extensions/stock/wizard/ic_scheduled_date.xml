<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ic_picking_date_form" model="ir.ui.view">
            <field name="name">ic.picking.date.form</field>
            <field name="model">ic.picking.date</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="picking_id" invisible="1" />
                        <field name="scheduled_date" style="width:50%;" />
                        <field name="update_ic_pickings" />
                    </group>

                    <footer>
                        <button name="update_scheduled_date" type="object" string="Update" class="oe_highlight" />
                        <button special="cancel" string="Close" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>