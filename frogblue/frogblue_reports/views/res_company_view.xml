<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    Inherited view-->
    <record id="view_company_form_inherit_frogblue_reports" model="ir.ui.view">
        <field name="name">view.company.form.inherit.frogblue.reports</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[1]" position="after">
                <page name="ReportFooter" string="Report Footer">
                    <group string="Footer">
                        <group colspan="4">
                            <field name="footer_report" nolabel="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>