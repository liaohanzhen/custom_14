<odoo>
	<template id="dealership_status" name="Dealership Status" inherit_id="portal.frontend_layout">
		 <xpath expr="//t[@t-call='website_sale.header_cart_link']" position="after">
			<li class="nav-item" t-if="user_id.application_id and user_id.application_id.state == 'done'">
				<a class="nav-link" href="/application/dashboard">
					<span> Dealer Dashboard</span>
				</a>
			</li>
			<li class="nav-item" t-if="not user_id.application_id">
				<a class="nav-link" href="/dealer/application">
					<span> Become A Dealer</span>
				</a>
			</li>
			<li class="nav-item" t-if="request.website.allow_dealer_locator">
				<a class="nav-link" href="/dealer/dealer_locator">
					<span> Find A Dealer</span>
				</a>
			</li>
		</xpath>
	</template>

	<template id="dealer_application_rating_star" name="Rating Star">
    <div class="th_dealer_rating mb-1 mt-1" t-if="res">
      <div class="o_website_rating_static">
        <t t-foreach="range(0, res.get('val_integer',0))" t-as="num">
          <i class="fa fa-star" role="img" aria-label="One star" title="One star"></i>
        </t>
        <t t-if="res.get('val_decimal')">
          <i class="fa fa-star-half-o" role="img" aria-label="Half a star" title="Half a star"></i>
        </t>
        <t t-foreach="range(0, res.get('empty_star',0))" t-as="num" role="img" t-attf-aria-label="#{empty_star} on 5" t-attf-title="#{empty_star} on 5">
          <i class="fa fa-star-o" t-att-value="num+1"></i>
        </t>
				<span t-if="res.get('avg')" class="rating_val ml-1"><b><t t-esc="res.get('avg')"/></b></span>
      </div>
    </div>
  </template>


	<template id="portal_become_dealer_option" inherit_id="portal.portal_layout">
		<xpath expr="//div[hasclass('o_portal_my_details')]" position="after">
			<div class="mt-2">
				<a class="mt-2" t-if="not user_id.application_id" href="/dealer/application">Register As a Dealer</a>
			</div>
		</xpath>
	</template>

	<template id="personal_information">
		<div class="heading">
			<h5 class="text-dark mb-2"><strong>Persional Details</strong></h5>
			<p class="text-dark mb-0"><strong>Fill Your Personal Details as per Industry Standards</strong></p>
		</div>
		<div class="card mt-2">
			<div class="card-body">
				<div class="form-data">
					<h6 class="text-dark mb-2"><strong>Persional info</strong></h6>
					<div class="d-flex">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>First Name</strong></label>
							<input type="text" t-att-value="partner_id.name" name="first_name" class="form-control" autofocus="autofocus" placeholder="First Name" required="required" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Last Name</strong></label>
							<input type="text" name="last_name" class="form-control" autofocus="autofocus" placeholder="Last Name" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Email Id</strong></label>
							<input type="email" t-att-value="partner_id.email" name="email" class="form-control" autofocus="autofocus" placeholder="Email Id" required="required" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>DOB (Date of birth)</strong></label>
							<input type="date" name="birth_date" class="form-control" autofocus="autofocus" placeholder="DOB" autocapitalize="off"/>
						</div>
					</div>
					<h6 class="text-dark mt-4 mb-2"><strong>Contact info</strong></h6>
					<div class="d-flex">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Phone No</strong></label>
							<input type="text" t-att-value="partner_id.phone" name="phone" class="form-control" autofocus="autofocus" required="required" placeholder="Phone No" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Mobile No</strong></label>
							<input type="text" t-att-value="partner_id.mobile" name="mobile" class="form-control" autofocus="autofocus"  placeholder="Mobile No" autocapitalize="off"/>
						</div>
					</div>
					<h6 class="text-dark mt-4 mb-2"><strong>Shop Address info</strong></h6>
					<div class="d-flex">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Location</strong></label>
							<input type="text" t-att-value="partner_id.street" name="street" class="form-control" required="required" autofocus="autofocus"  placeholder="Location" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Location 2</strong></label>
							<input type="text" t-att-value="partner_id.street2" name="street2" class="form-control" autofocus="autofocus"  placeholder="Location 2" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>City</strong></label>
							<input type="text" t-att-value="partner_id.city" name="city" required="required" class="form-control" autofocus="autofocus" placeholder="City" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>PinCode</strong></label>
							<input type="text" name="zip" class="form-control" autofocus="autofocus" placeholder="PinCode" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark" ><strong>Country</strong></label>
							<select id="country_id" class="form-control" required="required" name="country_id" >
								<option default="disabled" value="">Country</option>
								<t t-if="partner_id.country_id">
									<option selected="selected" t-att-value="partner_id.country_id.id"><t t-esc="partner_id.country_id.name" /></option>
								</t>
								<t t-foreach="countries" t-as="c">
                  <option t-att-value="c.id">
                    <t t-esc="c.name" />
                  </option>
                </t>
							</select>
						</div>
						<div t-attf-class="form-group #{'d-none' if not partner_id.state_id else ''}">
							<label class="col-form-label text-dark" ><strong>State</strong></label>
							<select id="state_id" class="form-control" name="state_id" >
								<option value="" default="disabled">State</option>
								<t t-if="partner_id.state_id">
									<option selected="selected" t-att-value="partner_id.state_id.id"><t t-esc='partner_id.state_id.name' /></option>
								</t>
							</select>
						</div>
					</div>
					<h6 class="text-dark mt-4 mb-2"><strong>Profession And Qualification</strong></h6>
					<div class="d-flex">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Qualification</strong></label>
							<input type="text" name="qualification" class="form-control" autofocus="autofocus"  placeholder="Qualification" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Current Occupation</strong></label>
							<select class="form-control" name="current_occupation" >
								<option value="" default="disabled">Select</option>
								<option value="self_employed">Self Employed</option>
								<option value="salaried">Salaried</option>
								<option value="others">Others</option>
							</select>
						</div>
					</div>
					<button class="btn btn-primary mt-2 mb-2 proceed"><strong>Proceed</strong> <span class="fa fa-arrow-right" /></button>
				</div>
			</div>
		</div>
	</template>

	<template id="advertiesment_details">
		<div class="heading">
			<h5 class="text-dark mb-2"><strong>Adverisment Details</strong></h5>
			<p class="text-dark mb-0"><strong>Fill Your Adverisment Details as per Industry Standards.</strong></p>
		</div>
		<div class="card mt-2">
			<div class="card-body">
				<div class="form-data">
					<div class="d-flex">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Dealer Vacancy Known Through</strong></label>
							<select id="vacancy_through" class="form-control" name="vacancy_through" >
								<option value="" default="disabled">Select</option>
								<option value="advertisement">Advertisement</option>
								<option value="area_sales_manager">Area Sales Manager</option>
								<option value="regional_manager">Regional Manager</option>
								<option value="others">Others</option>
							</select>
						</div>
						<div class="form-check col-12 mb-2">
							<input type="checkbox" name="has_code" class="form-check-input" autofocus="autofocus" style="margin-top: 0.2rem;"/>
							<label class="form-check-label text-dark"><strong>Do you have an Advertisement code?</strong></label>
						</div>
						<div class="form-group has_code d-none">
							<label class="col-form-label text-dark"><strong>Advertisment Code</strong></label>
							<input type="text" name="advertisement_code" class="form-control" autofocus="autofocus" placeholder="Enter the advertisment code" autocapitalize="off"/>
							<p class="text-muted mb-0">(Do you have any advertisment code if yes then please find, otherwise ignore this Field)</p>
						</div>
					</div>
					<button class="btn btn-primary mt-2 mb-2 proceed"><strong>Proceed</strong> <span class="fa fa-arrow-right" /></button>
				</div>
			</div>
		</div>
	</template>

	<template id="business_details">
		<div class="heading">
			<h5 class="text-dark mb-2"><strong>Business Details Listing</strong></h5>
			<p class="text-dark mb-0"><strong>Fill Your Business Details as per Industry Standards.</strong></p>
		</div>
		<div class="card mt-2">
			<div class="card-body">
				<div class="form-data">
					<div class="d-flex">
						<div class="form-group" t-if="business_type">
							<label class="col-form-label text-dark"><strong>Business Type</strong></label>
							<select class="form-control" name="business_type" >
								<option value="" default="disabled">Business Type</option>
								<t t-foreach="business_type" t-as="bt">
                  <option t-att-value="bt.id">
                    <t t-esc="bt.name" />
                  </option>
                </t>
							</select>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>City Interested In</strong></label>
							<input type="text" name="interested_city" class="form-control" autofocus="autofocus" placeholder="City" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark" ><strong>Country Interested In</strong></label>
							<select id="interested_country_id" class="form-control" name="interested_country_id" >
								<option default="disabled" value="">Country</option>
								<t t-foreach="countries" t-as="c">
                  <option t-att-value="c.id">
                    <t t-esc="c.name" />
                  </option>
                </t>
							</select>
						</div>
						<div class="form-group d-none">
							<label class="col-form-label text-dark" ><strong>State Interested In</strong></label>
							<select id="interested_state_id" class="form-control" name="interested_state_id" >
								<option value="" default="disabled">State</option>
							</select>
						</div>
					</div>
					<h6 class="text-dark mt-4 mb-2"><strong>Share your experience in thi</strong></h6>
					<div class="d-flex one">
						<div class="form-check mb-2 mt-2">
							<input type="checkbox" name="has_xp" class="form-check-input" autofocus="autofocus" style="margin-top: 0.2rem;"/>
							<label class="form-check-label text-dark"><strong>Do you have any experience in our business?</strong></label>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Share with us</strong></label>
							<textarea class="form-control" name="current_business" rows="4" placeholder="If No, current business details"></textarea>
							<textarea class="form-control dealer-none" has_xp="true" name="xp_description" rows="4" placeholder="If Yes, brief history business you have done so far"></textarea>
						</div>
					</div>
					<h6 class="text-dark mt-4 mb-2 dealer-none" has_xp="true" ><strong>Business Experience</strong></h6>
					<div class="d-flex three dealer-none" has_xp="true" >
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Name</strong></label>
							<input type="text" name="business_name" class="form-control" autofocus="autofocus" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>From:</strong></label>
							<input type="date" name="business_from" class="form-control" autofocus="autofocus" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>To:</strong></label>
							<input type="date" name="business_to" class="form-control" autofocus="autofocus" autocapitalize="off"/>
						</div>
						<div class="button mb-2">
							<button class="btn btn-success pull-right btn-sm add-experience">
								<span class="fa fa-plus" /> Add
							</button>
						</div>
					</div>
					<div class="added-experience mt-2 d-none dealer-none" has_xp="true">
						<table class="table">
							<thead>
								<tr>
									<td><p class="mb-0"><strong>Name</strong></p></td>
									<td><p class="mb-0"><strong>From</strong></p></td>
									<td><p class="mb-0"><strong>To</strong></p></td>
									<td class="action"><p class="mb-0"><strong>Action</strong></p></td>
								</tr>
							</thead>
							<tbody></tbody>
						</table>
					</div>
					<h6 class="text-dark mt-4 mb-2 dealer-none" has_xp="true" ><strong>Earning Last One Year</strong></h6>
					<div class="d-flex dealer-none" has_xp="true" >
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Turnover? (<t t-esc="currency_icon" />)</strong></label>
							<input type="number" name="turnover" class="form-control" autofocus="autofocus" autocapitalize="off"/>
						</div>
					</div>
					<button class="btn btn-primary mt-2 mb-2 proceed"><strong>Proceed</strong> <span class="fa fa-arrow-right" /></button>
				</div>
			</div>
		</div>
	</template>

	<template id="site_location_details">
		<div class="heading">
			<h5 class="text-dark mb-2"><strong>Site Location Details</strong></h5>
			<p class="text-dark mb-0"><strong>Fill Your Site Location Details as per Industry Standards.</strong></p>
		</div>
		<div class="card mt-2">
			<div class="card-body">
				<div class="form-data">
					<h6 class="text-dark mb-2"><strong>Location Details</strong></h6>
					<div class="d-flex">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Not Available</strong></label>
							<select class="form-control" name="site_not_available" >
								<option value="" default="disabled">Select</option>
								<option value="to_be_purchased">To be purchased</option>
								<option value="to_be_rented">To be rented</option>
								<option value="to_be_leased">To be leased</option>
							</select>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Available</strong></label>
							<select class="form-control" name="site_available" >
								<option value="" default="disabled">Select</option>
								<option value="owned">Owned</option>
								<option value="rented">Rented</option>
								<option value="leased">Leased</option>
								<option value="others">Others</option>
							</select>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Total Area(In sq/ft)</strong></label>
							<input type="number" name="total_area" class="form-control" autofocus="autofocus" autocapitalize="off"/>
						</div>
					</div>
					<div class="d-flex one">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>Query</strong></label>
							<textarea name="enquiry_description" class="form-control" rows="4"></textarea>
						</div>
					</div>
					<button class="btn btn-primary mt-2 mb-2 proceed"><strong>Proceed</strong> <span class="fa fa-arrow-right" /></button>
				</div>
			</div>
		</div>
	</template>

	<template id="investment_capacity_details">
		<div class="heading">
			<h5 class="text-dark mb-2"><strong>Investment Details</strong></h5>
			<p class="text-dark mb-0"><strong>Fill Your Investment Details as per Industry Standards.</strong></p>
		</div>
		<div class="card mt-2">
			<div class="card-body">
				<div class="form-data">
					<h6 class="text-dark mb-2"><strong>Investment</strong></h6>
					<div class="d-flex">
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>From (<t t-esc="currency_icon" />)</strong></label>
							<input type="number" name="investment_low_cap" class="form-control" t-attf-placeholder="From (#{currency_icon})" autofocus="autofocus" autocapitalize="off"/>
						</div>
						<div class="form-group">
							<label class="col-form-label text-dark"><strong>To (<t t-esc="currency_icon" />)</strong></label>
							<input type="number" name="investment_high_cap" class="form-control" t-attf-placeholder="To (#{currency_icon})" autofocus="autofocus" autocapitalize="off"/>
						</div>
					</div>
					<button class="btn btn-primary mt-2 mb-2 proceed"><strong>Submit</strong> <span class="fa fa-arrow-right" /></button>
				</div>
			</div>
		</div>
	</template>

	<template id="dealership_mangement_signup_form">
		<t t-call="website.layout">
			<t t-set="hide_advertisement_tab" t-value="not website.hide_advertisement_tab" />
			<t t-set="hide_site_location_tab" t-value="not website.hide_site_location_tab" />
			<t t-set="hide_investment_tab" t-value="not website.hide_investment_tab" />
			<t t-set='company' t-value="request.env['res.company'].sudo()._get_main_company()" />
			<t t-set="currency_icon" t-value="company and company.currency_id.symbol or ''" />
			<div class="dealership_mangement_signup_form" t-if="request.website.allow_user_signup">
				<div class="image-container mb-4">
					<section class="dealer-img" t-attf-style="background-image: url('#{request.website.image_url(request.website, 'sign_up_banner')}');" >
						<div class="d-flex align-items-center justify-content-center">
							<h2 class="text-white font-weight-bold">Become A Dealer</h2>
						</div>
					</section>
					<div class="container">
						<h4 class="mt-4 mb-2 text-dark">Grow With Global Dealer</h4>
						<p class="text-muted mb-0">
							If you have good entrepreneur skills and appetite for success, contact us to become a part of the success of Brand. We cultivate trust in every endeavor and if you have what it takes it that way, you are the one we are looking for. Be a part of our network and join us for a profitable venture.
						</p>
					</div>
				</div>
				<div class="dealership_application_error d-none container" />
				<div class="form-user-container">
					<div class="nav-header">
						<nav class="container">
						  <div class="nav nav-tabs" id="nav-tab" role="tablist">
						    <a class="nav-item nav-link active" id="personal-detail-tab" href="#personal-detail" data-toggle="tab" role="tab" aria-controls="personal-detail" aria-selected="true">Personal Details</a>
						    <a t-if="hide_advertisement_tab" class="nav-item nav-link" id="advertisement-details-tab" href="#advertisement-details" data-toggle="tab" role="tab" aria-controls="advertisement-details" aria-selected="false">Advertisement Details</a>
								<a class="nav-item nav-link" id="business-detials-tab" href="#business-detials" data-toggle="tab" role="tab" aria-controls="business-detials" aria-selected="false">Business-Details</a>
								<a t-if="hide_site_location_tab" class="nav-item nav-link" id="site-location-tab" href="#site-location" data-toggle="tab" role="tab" aria-controls="site-location" aria-selected="false">Site Location</a>
						    <a t-if="hide_investment_tab" class="nav-item nav-link" id="investment-capacity-tab" href="#investment-capacity" data-toggle="tab" role="tab" aria-controls="investment-capacity" aria-selected="false">Investment Capacity</a>
						  </div>
						</nav>
					</div>
					<form class="nav-content mt-4 mb-4 container" method="POST" action="/dealer/create_application">
						<div class="tab-content" id="nav-tabContent">
						  <div class="tab-pane fade show active" id="personal-detail" role="tabpanel" aria-labelledby="personal-detail-tab">
								<t t-call="dealership_management.personal_information" />
							</div>
						  <div t-if="hide_advertisement_tab" class="tab-pane fade" id="advertisement-details" role="tabpanel" aria-labelledby="advertisement-details-tab">
								<t t-call="dealership_management.advertiesment_details" />
							</div>
							<div class="tab-pane fade" id="business-detials" role="tabpanel" aria-labelledby="business-detials-tab">
								<t t-call="dealership_management.business_details" />
							</div>
							<div t-if="hide_site_location_tab" class="tab-pane fade" id="site-location" role="tabpanel" aria-labelledby="site-location-tab">
								<t t-call="dealership_management.site_location_details" />
							</div>
						  <div t-if="hide_investment_tab" class="tab-pane fade" id="investment-capacity" role="tabpanel" aria-labelledby="investment-capacity-tab">
								<t t-call="dealership_management.investment_capacity_details" />
							</div>
						</div>
					</form>
				</div>
			</div>
			<div t-else="1" class="container">
				<div class="card mt-4">
					<div class="card-header">
				    <t t-esc="request.website.signup_closed_description" />
				  </div>
				</div>
			</div>
		</t>
	</template>

	<template id="sucess_membership">
		<div class="sucess-membership">
			<div class="d-flex align-items-center justify-content-center">
				<img src="/dealership_management/static/src/img/slice_icon.png" />
				<p class="text-dark mb-0 mt-4"><strong>Thank You !!</strong></p>
				<h6 class="mt-2 text-muted">Your Dealership form has been successfully submitted</h6>
			</div>
		</div>
	</template>

	<template id="portal_application_plans">
		<div class="portal_plans mt-4">
			<div class="heading mt-4 mb-4 text-center w-100">
