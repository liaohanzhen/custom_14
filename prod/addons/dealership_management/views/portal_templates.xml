															<label class="col-form-label text-dark"><strong>Message</strong></label>
															<textarea class="form-control" required="required" name="message" rows="8" placeholder="Message"></textarea>
														</div>
													</div>
													<div class="d-flex flex-wrap form-submit w-100 mt-4 mb-4">
														<button type="submit" class="btn btn-primary mr-2">Submit</button>
														<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
													</div>
												</form>
												<a class="btn-color mb-4" t-if="user_id._is_public()" href="/web/login">Login to post a review</a>
												<div t-attf-class="col-12 items-devide #{'col-md-12'  if user_id._is_public() else 'col-md-6 '}">
													<h5>See All Review's</h5>
													<div class="dealers-reviews mb-2" />
													<button class="w-100 btn-normal mb-2 d-none load_more_review">Load more</button>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="dealer_faqs">
		<t t-call="website.layout">
			<div class="dealer-faqs">
				<div class="header">
					<div class="container h-content d-flex justify-content-center align-items-center flex-column">
						<h1 class="font-size-blod">Hi! How can we help you?</h1>
						<div class="w-40 search-faq-items">
							<div class="input-group">
							  <input type="text" placeholder="Search" class="form-control" />
							  <div class="input-group-append">
							    <button class="btn-color">Search</button>
							  </div>
							</div>
						</div>
					</div>
				</div>
				<div class="container main mt-4 mb-4">
					<div class="heading mb-2 mt-2">
						<h5 class="text-dark mb-2"><strong>Select Category</strong></h5>
						<label class="text-dark mb-0"><strong>You can also browse the topics below to find what you are looking for.</strong></label>
					</div>
					<div class="d-flex flex-wrap category">
						<t t-foreach="faq_category" t-as="cat">
							<button type="button" class="btn btn-primary mr-2 mt-2" t-att-id="cat.id">
								<span t-esc="cat.name" /><br />
							  <span class="default" >Total Article<span t-esc="len(cat.faq_line)" /></span>
							</button>
						</t>
						<t t-if="not faq_category">
							<span class="text-dark mt-2">No Category Found</span>
						</t>
					</div>
					<div class="faq-items mt-4" t-if="active_cat">
						<div class="mb-4">
							<h3 t-esc="active_cat.name" class="mb-2" id="head"/>
							<p id="item_description">
								<t t-esc="active_cat.description" />
							</p>
							<a href="#" class="text-dark d-none" id="get_back_faq" ><b><span class="fa fa-long-arrow-left" /> Back</b></a>
						</div>
						<div id="accordion" t-att-data_id="active_cat.id" />
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="cart_lines_inherit" inherit_id="website_sale.cart_lines" name="Cart Lines inherit">
		<xpath expr="//td[hasclass('td-qty')]//i[hasclass('fa-minus')]/.." position="attributes">
			<attribute name="t-if">not line.application_id</attribute>
		</xpath>
		<xpath expr="//td[hasclass('td-qty')]//i[hasclass('fa-plus')]/.." position="attributes">
			<attribute name="t-if">not line.application_id</attribute>
		</xpath>
	</template>

</odoo>
