<odoo>
  <data>
	  <template id="page_joinus" name="Join Us">
		<t t-call="website.layout">
        <div id="wrap" class="oe_structure oe_empty">
			<!-- ======= Hero Section ======= -->
			  <section id="hero-project" style="background: url('/theme_5b/static/img/banner-career.jpg'); background-position: 50% 50%; background-size:cover; background-repeat:no-repeat">
				<div class="container position-relative" />
			  </section><!-- End Hero -->
				
			  <main id="main">
				<section id="career2" class="about">
				  <div class="container">
					<div class="row">
					  <div class="col-lg-12 pt-4 pt-lg-0 order-2 order-lg-1 content">
					  
					  <style type="text/css">
            
						  #whr_embed_hook .whr-items,
						  #whr_embed_hook .whr-item,
						  #whr_embed_hook .whr-info {
						  background: none;
						  list-style: none;
						  margin: 0;
						  padding: 0;
						  }
						
						  #whr_embed_hook .whr-item {
						  margin-bottom: .5rem;
						
						  padding:7px;
						  }
						
						  #whr_embed_hook .whr-item{ background: #f1f1f1; }
						  #whr_embed_hook .whr-item:nth-child(even) { background: #fff; }
						
						  #whr_embed_hook .whr-item:last-child {
						  margin-bottom: 0;
						  }
						
						  #whr_embed_hook .whr-items {
						  /*padding: 0 1rem 1rem;*/
						  border: 1px solid #ccc;
						 
						  }
						
						  #whr_embed_hook .whr-group {
						  margin: 0;
						  padding: .2rem .4rem;
						  -webkit-border-radius: 3px;
						  -moz-border-radius: 3px;
						  border-radius: 3px;
						  }
						
						  #whr_embed_hook .whr-toggle {
						  margin-top: .5rem;
						  }
						
						  #whr_embed_hook .whr-toggle a {
						  display: block;
						  }
						
						
						  #whr_embed_hook .whr-toggle:first-child {
						  margin-top: 0;
						  }
						
						  
						  #whr_embed_hook .whr-info li {
						  background: none;
						  display: inline;
						  margin: 0 .2rem 0 0;
						  padding: .1rem .4rem;
						  -webkit-border-radius: 3px;
						  -moz-border-radius: 3px;
						  border-radius: 3px;
						  font-size: .9rem;
						  } 
						
						  #whr_embed_hook .whr-info li span {
						  text-transform: capitalize;
						  font-size: .9rem;
						  }
						
						  #whr_embed_hook .whr-title {
						  margin: 0;
						  padding: .5rem 0;
						  font-size: 1.1rem;
						  }
						
						
						  #whr_embed_hook .whr-description ul {
						  margin: .5rem 0;
						  }
						
						  #whr_embed_hook .whr-description li {
						  margin: .25rem 0;
						  }
						  #whr_embed_hook .whr-info .whr-code { display: none; }
						</style>
								  <script src='https://www.workable.com/assets/embed.js' type='text/javascript'></script>
						<script type='text/javascript' charset='utf-8'>
						whr(document).ready(function(){
						whr_embed(501405, {detail: 'titles', base: 'jobs', zoom: 'country', grouping: 'none'});
						
						});
						
						whr(document).on('click', 'li.whr-item a', function(e) 
						{ e.preventDefault(); window.open(this.href, '_blank'); });
						
						$(window).on('load', function() {
							$(".whr-date span").replaceWith( "<span>Published date:</span>" )
						  });
						  
						</script>
						
						
						<div class="section-title">
							<h3>Join Us</h3>
						</div>
						<div class="mission">
							<div class="info" style="line-height:2em">								
							  <p>
							  Join us in creating a world where abundant, accessible, affordable power from the sun meets all our energy needs - we are currently looking for the following superstars:<br />
								</p>
								
								<div id="whr_embed_hook" align="left"></div>
								<!--
								<t t-foreach="contents" t-as="content">
											<t t-raw="content.description"/>
										</t>
								-->
								<p><br/>We are growing rapidly across our entire business and would love to hear from you 
								if you're keen to log your interest with a specific team.<br />
							  </p><br />
						  </div>
						  </div>
					  
						
								
						  <div class="mission">
							<div class="info" style="line-height:2em">
								
							  <!--<p>Join us in creating a world where abundant, accessible, affordable power from the sun meets all our energy needs.<br />
							  </p>-->
							  
							  <div class="contact">
								<form action="/submit/careers" id="uploadForm" novalidate="true" method="post" enctype="multipart/form-data" role="form" class="contact_us_form">
								  <div class="form-row">
									  <div class="col-md-6 form-group">
										  <label for="name"><strong>First Name*</strong></label>
										  <input type="text" name="firstname" class="form-control" id="firstname" placeholder="First Name" data-rule="required" data-msg="Please enter first name"/>
										  <div class="validate"/>
									  </div>
									  <div class="col-md-6 form-group">
										<label for="name"><strong>Last Name*</strong></label>
										<input type="text" name="lastname" class="form-control" id="lastname" placeholder="Last Name" data-rule="required" data-msg="Please enter last name"/>
										<div class="validate"/>
									  </div>
								  </div>
					  
								  <div class="form-row">
									<div class="col-md-6 form-group">
									  <label for="email"><strong>Email*</strong></label>
									  <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email"/>
									  <div class="validate"/>
									</div>
									  <div class="col-md-6 form-group">
										  <label for="phone"><strong>Phone</strong></label>
										  <input type="text" class="form-control" name="phone" id="phone"/>
									  </div>
								  </div>
								  <div class="form-group">
									  <label for="relevant_team"><strong>Relevant team*</strong></label>
									  <select name="relevant_team" id="relevant_team" class="form-control" data-rule="required" data-msg="Please select relevant team">
										  <option value="">--Select team--</option>
										  <option value="Engineering">Engineering</option>
										  <option value="Dispatch and Delivery">Dispatch and Delivery</option>
										  <option value="Sales and Marketing">Sales and Marketing</option>
										  <option value="Finance">Finance</option>
										  <option value="Deployment">Deployment</option>
										  <option value="Administration">Administration</option>
										  <option value="Legal">Legal</option>
										  <option value="Information Technology">Information Technology</option>
										  <option value="Others">Others</option>
									  </select>
									  <div class="validate"/>
								  </div>
								  <div class="form-group">
									<label for="message"><strong>Briefly let us know which role you are interested in*</strong></label>
									<textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"/>
									<div class="validate"/>
								  </div>
					  
								  <div class="form-group">
									<label for="resume"><strong>Upload Resume</strong></label>
									<input id="resume" name="resume" type="file" data-rule="required" data-msg="Please upload latest resume" class="form-control-file"/>
									<div class="validate"/>
								  </div>
								  
								  <div class="form-group">
									<input type="checkbox" checked="checked" value="yes" id="check_5b" name="check_5b"/>
									<label class="form-check-label" style="vertical-align:middle !important;" for="check_5b">Yes, I would like to hear about general 5B world-changing updates.</label>
								  </div>
								  
								  <br/>
								  <input type="hidden" value="career" name="form_type"/>
								  <div class="text-center"><button type="submit">Submit details <img src="/theme_5b/static/img/loading1.gif" style="display:none"/></button></div>
					  
								</form>
							  </div>
							  
							  <br/>
							  <a href="/about" style="text-decoration: underline;">Click here</a> to find out more about 5B and <a href="/team" style="text-decoration: underline;">meet the team</a><br/><br/> 
							  
						  </div>
						</div>
						
					  </div>
					</div>

				  </div>
				</section><!-- End About Section -->
				<!--</t>-->
			  </main><!-- End #main -->
  
        </div>
      </t>
    </template>

  </data>
</odoo>